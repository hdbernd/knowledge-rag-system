#!/bin/bash

# Web UI Launcher for Knowledge RAG System
# Quick launcher for the Streamlit web interface

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üåê Starting Knowledge RAG Web UI...${NC}"

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Check if virtual environment exists
if [ ! -d "venv" ]; then
    echo -e "${RED}‚ùå Virtual environment not found!${NC}"
    echo -e "${YELLOW}Please run the setup first:${NC}"
    echo "   python3 -m venv venv"
    echo "   source venv/bin/activate"
    echo "   pip install -r requirements.txt"
    exit 1
fi

# Check if Ollama is running
if ! pgrep -x "ollama" > /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è Ollama service not running. Starting it...${NC}"
    if command -v brew >/dev/null 2>&1; then
        brew services start ollama
        echo -e "${GREEN}‚úÖ Ollama started via Homebrew${NC}"
    else
        echo -e "${RED}‚ùå Please start Ollama manually: brew services start ollama${NC}"
        exit 1
    fi
fi

# Activate virtual environment
echo -e "${BLUE}Activating virtual environment...${NC}"
source venv/bin/activate

# Check if basic dependencies are installed
python -c "import ollama, chromadb, sentence_transformers, streamlit" 2>/dev/null || {
    echo -e "${RED}‚ùå Dependencies not installed!${NC}"
    echo -e "${YELLOW}Installing dependencies...${NC}"
    pip install -r requirements.txt
}

# Check if at least one model is available
echo -e "${BLUE}Checking available models...${NC}"
MODELS=$(ollama list 2>/dev/null | tail -n +2 | wc -l)
if [ "$MODELS" -eq 0 ]; then
    echo -e "${YELLOW}‚ö†Ô∏è No models found. Installing phi3:mini...${NC}"
    ollama pull phi3:mini
    echo -e "${GREEN}‚úÖ phi3:mini installed${NC}"
else
    echo -e "${GREEN}‚úÖ Found $MODELS model(s)${NC}"
fi

# Initialize RAG system (smart indexing)
echo -e "${BLUE}üîÑ Initializing RAG system...${NC}"
python -c "
try:
    from knowledge_rag import KnowledgeRAG
    import os
    import sys
    
    # Initialize RAG system
    rag = KnowledgeRAG(documents_dir='documents', model_name='phi3:mini')
    
    # Check if we have any documents at all
    if rag.collection.count() == 0:
        print('üìö No documents indexed yet. Loading and indexing documents...')
        documents = rag.load_documents()
        if documents:
            print(f'Found {len(documents)} documents to index.')
            rag.index_documents(documents)
            print(f'‚úÖ Indexing complete! {rag.collection.count()} chunks indexed.')
        else:
            print('‚ö†Ô∏è No documents found. Add files to the documents/ directory.')
    else:
        # Use smart indexing to only process changed files
        print(f'üìä Current database: {rag.collection.count()} chunks')
        changes_made = rag.smart_index_documents()
        if changes_made:
            print(f'‚úÖ RAG system updated! {rag.collection.count()} chunks total.')
        else:
            print('‚úÖ RAG system ready - no changes needed!')
except Exception as e:
    print(f'‚ùå Error initializing RAG system: {e}')
    print('üìù Will try to initialize during UI startup instead.')
    sys.exit(0)  # Don't fail the script, just continue
" || echo -e "${YELLOW}‚ö†Ô∏è RAG initialization failed, will retry in UI${NC}"

# Start the Web UI
echo -e "${GREEN}üöÄ Launching Web UI...${NC}"
echo -e "${BLUE}Opening browser at: http://localhost:8501${NC}"
echo -e "${YELLOW}Press Ctrl+C to stop the server${NC}"
echo ""

# Start Streamlit and automatically open browser
streamlit run streamlit_app.py --server.port 8501 --server.headless false